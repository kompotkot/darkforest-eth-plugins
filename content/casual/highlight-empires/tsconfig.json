{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowJs": true,
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"./node_modules"
	]
}